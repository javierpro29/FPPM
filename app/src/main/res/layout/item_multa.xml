<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                tools:text="Cedula: 40218794010"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/placa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Placa: ABC123"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/motivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Movito: exceso de velocidad"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/comentario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Comentario: Iba muy rapido"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                tools:text="Latitud: 18.5059997" />

            <TextView
                android:id="@+id/longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Longitud: -69.8591339"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Fecha: 10/12/2023"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Hora: 10:30 PM"
                android:textColor="#000000"
                android:textSize="18sp" />


        </LinearLayout>




    </LinearLayout>



</androidx.cardview.widget.CardView>