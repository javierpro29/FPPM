<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Horoscopo">


    <ImageView
        android:id="@+id/ivHoroscopeImage"
        android:layout_width="285dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/horoscopo" />


    <Spinner
        android:id="@+id/spinnerSigno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivHoroscopeImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/tvCaracteristicas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSigno"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:padding="30dp"
        android:textSize="20dp"
        android:text=""
        />

</RelativeLayout>